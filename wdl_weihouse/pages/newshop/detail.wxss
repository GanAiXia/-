.container {
    padding-bottom: 0;
}

.section {
    background-color: #ffffff;
    border-top: #e1e1e1 1px solid;
    border-bottom: #e1e1e1 1px solid;
    margin-top: 20rpx;
}

.detail {
    margin-left: 30rpx;
    padding-top: 35rpx;
    padding-bottom: 35rpx;
    width: 95%;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.detail text {
    font-weight: bold;
}

.ditem {
    margin-left: 30rpx;
    border-top: 1px solid #e1e1e1;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
}

.notb {
    border-top: 0px solid #e1e1e1;
}

.ditem .label {
    font-size: 30rpx;
    color: #999;
    display: inline-block;
    width: 25%;
    text-align: left;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    vertical-align: middle;
}

.ditem .info {
    display: inline-block;
    width: 73%;
    font-size: 26rpx;
    text-align: left;
    vertical-align: middle;
}

.ditem .intro {
    font-size: 26rpx;
    text-align: left;
    vertical-align: middle;
    line-height: 50rpx;
}

.copy {
    background-color: #eee;
    padding: 30rpx 60rpx;
    position: relative;
    padding-bottom: 60rpx;
}

.copy .info {
    color: #666666;
    margin-left: 20rpx;
}

.copy text {
    display: table-cell;
}

.copy .copyicon {
    position: absolute;
    left: 30rpx;
    top: 25rpx;
    display: inline-block;
}

.copy .info {
    line-height: 30rpx;
}

.copy .info .ft22 {
    font-size: 22rpx;
    line-height: 30rpx;
    text-justify: inter-word;
    text-align: justify;
}
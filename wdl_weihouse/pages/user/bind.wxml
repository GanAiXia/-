<view class="container">
    <view class="section">
        <view class="broker">
            <view class="bd">
                <image class="broker-head" src="{{avatar}}"></image>
                <view class="name">
                    <view class="txt">
                        <text class="ft34"> {{username}}</text>
                    </view>
                </view>
            </view>
        </view>
        <view class="method">
            <form bindreset="formReset" bindsubmit="formSubmit">
                <view class="weui-cell">
                    <view class="weui-cell__hd">
                        <text class="weui-label">请完善您的信息<text class="ft28">（用于发布房源审核）</text>
                        </text>
                    </view>
                </view>
                <view class="weui-cell" style="margin-top:30rpx;">
                    <view class="weui-cell__hd">
                        <text class="weui-label">姓       名：</text>
                    </view>
                    <view class="weui-cell__bd">
                        <input class="weui-input" name="nickname" placeholder="请输入您的姓名" type="text" value="{{broker.nickname}}"></input>
                    </view>
                </view>
                <view class="weui-cell" style="margin-top:30rpx;">
                    <view class="weui-cell__hd">
                        <text class="weui-label">手 机 ：</text>
                    </view>
                    <view class="weui-cell__bd">
                        <input class="weui-input" name="mobile" placeholder="请输入您的手机号" type="number" value="{{broker.mobile}}"></input>
                    </view>
                </view>
                <view class="bd">
                    <button formType="submit"> 提交保存</button>
                </view>
            </form>
        </view>
    </view>
</view>

page {
    background: #fff;
}

.section {
    background: #fff;
    padding-bottom: 30rpx;
}

.broker {
    padding-left: 30rpx;
    margin-top: 0rpx;
}

.broker .bd {
    padding: 30rpx;
}

.broker .broker-head {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    float: left;
    margin-top: 0rpx;
}

.broker .name {
    margin-left: 150rpx;
    text-align: left;
    vertical-align: center;
}

.broker .txt {
    display: inline-block;
    width: 50%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    text-align: left;
    margin-top: 15rpx;
}

.method {
    padding: 60rpx;
}

.method .name {
    border-bottom: 1rpx solid #dadada;
    position: relative;
    height: 30rpx;
}

.method .txt {
    position: absolute;
    width: 200rpx;
    left: 50%;
    margin-left: -100rpx;
    background: #fff;
    bottom: -25rpx;
    text-align: center;
    color: #999;
}

.method .bd {
    text-align: center;
    padding-top: 60rpx;
    width: 100%;
}

.cp {
    margin-top: 15rpx;
    padding: 10rpx 30rpx 10rpx 60rpx;
}

.cp .bd {
    border-bottom: #dadada 1px solid;
}

.line {
    height: 90rpx;
    line-height: 90rpx;
}

.line .more {
    float: right;
    text-align: right;
    color: #999;
}

button[size=mini] {
    display: inline-block;
    line-height: 2.3;
    font-size: 13px;
    padding: 0 0.5em;
}
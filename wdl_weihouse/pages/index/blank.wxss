page {
    background-color: #fff;
}

.banner {
    height: 360rpx;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: left top;
}

.bgbanner {
    width: 100%;
    height: 360rpx;
}

.mask-bg {
    background-color: #000;
    opacity: .7;
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0px;
    top: 0;
    z-index: 10000;
}

.dialog-box {
    background-color: #fff;
    z-index: 100001;
}

.dialog-box .dialog-title {
    background-color: #03A9F7;
    color: #fff;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    font-size: 32rpx;
}

.dialog-box .dialog-title2 {
    background-color: #f1f1f1;
    color: #03A9F7;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    font-size: 30rpx;
}

.dialog-box .dialog-title .close {
    float: right;
    margin-right: 20rpx;
}

.dialog-bd {
    padding: 30rpx;
}

.dialog-item {
    width: 49.5%;
    text-align: left;
    display: inline-block;
}

.dialog-item .item-bd {
    display: block;
    color: #fff;
    margin: 20rpx;
    height: 60rpx;
    line-height: 50rpx;
}

.dialog-item text {
    font-size: 32rpx;
}

.dialog-bd .c11 {
    background-color: #E97909;

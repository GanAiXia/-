.mask-bg {
    background-color: #000;
    opacity: .7;
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0px;
    top: 0;
    z-index: 10000;
}

.dialog-box {
    width: 680rpx;
    position: fixed;
    top: 50%;
    left: 50%;
    margin-left: -340rpx;
    background-color: #fff;
    z-index: 100001;
}

.dialog-box .dialog-title {
    background-color: #00C784;
    color: #fff;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    font-size: 40rpx;
}

.dialog-box .dialog-title .close {
    float: right;
    margin-right: 20rpx;
}

.dialog-bd {
    padding: 30rpx;
}

.dialog-item {
    width: 49.5%;
    text-align: center;
    display: inline-block;
}

.dialog-item .item-bd {
    display: block;
    color: #fff;
    margin: 20rpx;
    height: 80rpx;
    line-height: 80rpx;
}

.dialog-item text {
    font-size: 38rpx;
}

.dialog-item .c1 {
    background-color: #52AEED;
}

.dialog-item .c2 {
    background-color: #8294E8;
}

.dialog-item .c3 {
    background-color: #F9B552;
}

.dialog-item .c4 {
    background-color: #F879A4;
}

.dialog-item .c5 {
    background-color: #00C784;
}

.dialog-item .c6 {
    background-color: #F9B552;
}

.dialog-item .c7 {
    background-color: #52AEED;
}
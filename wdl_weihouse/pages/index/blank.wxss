.addicon {
    display: table-cell;
    float: left;
    padding: 0 10rpx;
}

.addicon image {
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
}

.dialog-item2 {
    display: inline-block;
    width: 49.5%;
    text-align: center;
}

.dialog-item2 .item-icon {
    display: flex;
    justify-content: center;
}

.dialog-item2 .dao {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    line-height: 120rpx;
    vertical-align: middle;
    text-align: center;
}

.dialog-item2 .bg1 {
    background: #00C683;
}

.dialog-item2 .dao-txt {
    font-size: 28rpx;
    margin-top: 10rpx;
    color: #666;
    vertical-align: center;
}

.dialog-item2 .dao .iconfont {
    color: #fff;
    font-weight: normal;
    font-size: 60rpx;
    margin-top: 5rpx;

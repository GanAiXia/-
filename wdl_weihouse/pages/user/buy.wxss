.section {
    background-color: #ffffff;
    padding: 30rpx;
}

.mb10 {
    margin-bottom: 10rpx;
}

.head {
    padding: 0 0 30rpx 0rpx;
}

.planbox {
    margin-top: 20rpx;
}

.plan-title {
    font-size: 30rpx;
    border: #dadada 1rpx solid;
    padding-left: 20rpx;
    border-radius: 20rpx;
    color: #777;
    height: 80rpx;
}

.plan-title .label {
    display: block;
    width: 150rpx;
    float: left;
    padding-top: 15rpx;
    color: #666;
}

.plan-title .inputbox {
    padding-top: 15rpx;
    margin-left: 170rpx;
}

.inputbox .oneinput {
    border: none;
    background: none;
}

.planbox .bd {
    padding: 20rpx 0rpx;
}

.item {
    white-space: nowrap;
    padding-top: 25rpx;
    display: flex;
    flex-direction: row;
}

.item .num:first-child {
    margin-left: 0rpx;
}

.item .num:last-child {
    margin-right: 0rpx;
}

.num {
    flex-grow: 1;
    overflow: hidden;
    text-align: center;
    margin: 0 15rpx;
}

.num text {
    display: block;
    text-align: center;
    width: 100%;
    height: 70rpx;
    line-height: 70rpx;
    background: #eee;
    color: #888;
    font-size: 40rpx;
}

.active text {
    background: #ff0000;
    color: #fff;
}

.result text {
    color: #ff0000;
    font-size: 35rpx;
}

.btn-area {
    padding: 60rpx 0rpx;
}

.button {
    font-size: 40rpx;
    line-height: 2;
}

button[type=primary] {
    font-weight: bold;
}